# decorations
font_family    JetBrains Mono
font_size 18.0
enabled_layouts splits:split_axis=horizontal,*
window_margin_width 5
single_window_margin_width 0
tab_bar_edge top

#misc
scrollback_lines 50000
map kitty_mod+equal change_font_size all +1.0
map kitty_mod+minus change_font_size all -1.0
map kitty_mod+backspace change_font_size all 0
macos_quit_when_last_window_closed yes

# tabs
tab_bar_style powerline
tab_powerline_style slanted
tab_activity_symbol " * "
map ctrl+a>n new_tab
map ctrl+a>t select_tab
map ctrl+a>] next_tab
map ctrl+a>[ previous_tab

# kitty windows
map ctrl+a>\ launch --location=vsplit --cwd=current
map ctrl+a>- launch --location=hsplit --cwd=current
map f4 launch --location=split
map f7 layout_action rotate
map shift+up move_window up
map shift+left move_window left
map shift+right move_window right
map shift+down move_window down
map kitty_mod+up layout_action move_to_screen_edge top
map kitty_mod+left layout_action move_to_screen_edge left
map kitty_mod+right layout_action move_to_screen_edge right
map kitty_mod+down layout_action move_to_screen_edge bottom
map ctrl+a>h neighboring_window left
map ctrl+a>l neighboring_window right
map ctrl+a>k neighboring_window up
map ctrl+a>j neighboring_window down
map ctrl+a>p nth_window -1
map ctrl+a>z toggle_layout stack
